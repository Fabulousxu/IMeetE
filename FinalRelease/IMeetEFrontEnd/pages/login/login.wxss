.login{
    position: fixed;
    top: 25%;
    left: 15%;
    width: 70%;
    align-items: center;
    justify-content: center;
    height: 100vh;
    background-color: transparent;
}

input.login-input{
    font-size: 16px;
    width: 100%;
    height: 60rpx;
    border: 1rpx solid #ccc;
    border-radius: 20rpx;
    margin-bottom: 13%;
    padding-left: 20rpx;
}

button.login-button{
    font-size: 16px;
    width: 100%;
    height: 80rpx;
    border: none;
    border-radius: 20rpx;
    background-color: #007bff;
    color: white;
    margin-top: 20rpx;
}

button.login-button:active{
    background-color: #0056b3;
}