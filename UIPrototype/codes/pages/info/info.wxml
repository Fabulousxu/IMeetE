<!-- pages/info/info.wxml -->
<!-- <navigation-bar back="{{true}}"></navigation-bar> -->
<scroll-view class="subscribe" type="list" scroll-y="{{true}}" style="width:100vw;height:100%" bindscrolltolower="onReachBottom">
  <view class="container">
    <view style="display:flex; width:100%; padding:0rpx; justify-content:flex-start;">
      <button class="back-button" bindtap="navigateBack">返回</button>
    </view>
    <view class="tag-container">
      <text wx:for="{{tags}}" wx:key="*this" class="tag-item">{{item}}</text>
    </view>
    <view class="profile-container">
      <img class="profile-pic" src="{{avatar || '/path/to/default/avatar.png'}}"/>
      <view class="profile-info">
        <text class="profile-name">{{name}}</text>
        <text class="profile-id">id: {{id}}</text>
        <view class="profile-stats">
          <text>{{mbti}}</text>
          <text>{{area}}</text>
          <text>{{sex}}</text>
          <text>{{age}}</text>
        </view>
      </view>
    </view>
    <view class="intro-section">
      <text class="intro">{{intro}}</text>
      <view class="divider"></view>
      <view class="social-stats">
        <text class="follow-title">关注</text>
        <text class="follow-count">{{followCount}}</text>
      </view>
      <view class="social-stats">
        <text class="fans-title">粉丝</text>
        <text class="fans-count">{{followerCount}}</text>
      </view>
    </view>
    <view class="button-row">
      <button id="postButton" bindtap="onPostButton" class="tab-button">动态</button>
      <button id="saveButton" bindtap="onSaveButton" class="tab-button save">收藏</button>
    </view>
<view id="posts" wx:if="{{mode}}" class="content-panel posts">
  <user-post id="self-post" bind:postTap="showPostDetail" pageType="post" userId="{{userId}}" category=""></user-post>
</view>
<view id="saves" wx:else class="content-panel saves">
  <user-post id="self-collect" bind:postTap="showPostDetail" pageType="collect" userId="{{userId}}" category=""></user-post>
</view>
  </view>
</scroll-view>
