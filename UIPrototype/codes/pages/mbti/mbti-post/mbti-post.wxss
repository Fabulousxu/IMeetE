page {
    display: flex;
    flex-direction: column;
    width: 100%;
    min-height: 100%;
  }
  
  swiper {
    height: 100%;
    width: 100%;
  }
  
  .main-page {
    display: flex;
    flex-direction: column;
    flex: 1;
    height: 100%;
    overflow: auto;
  }
  
  .search {
    width: 60%;
    margin-top: 50px;
  }
  
  .search_arr {
    border: 2px solid black;
    border-radius: 10rpx;
    margin-left: 40rpx;
    width: 500rpx;
  }
  
  .search_arr input {
    margin-left: 60rpx;
    height: 40rpx;
    border-radius: 5px;
  }
  
  .searchinput {
    padding-left: 36%;
    width: 15%;
    text-align: center;
  }
  
  .searchicon {
    margin: 10rpx 10rpx 10rpx 10rpx;
    position: absolute;
    margin-left: 48%;
    z-index: 2;
    width: 15px;
    height: 15px;
    text-align: center;
  }
  
  .back-btn {
    width: 40px;
    height: 40px;
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: transparent;
  }
  
  .arrow {
    color: black; /* 箭头颜色 */
    font-size: 24px; /* 箭头大小 */
  }

  .mbti-pl {
    display: flex;
    flex-direction: column;
    align-items: center;
    overflow-y: hidden;
    width: 100%;
    height: 100vh;
  }
