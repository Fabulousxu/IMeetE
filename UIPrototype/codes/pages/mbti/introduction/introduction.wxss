/* pages/mbti/introduction.wxss */

.mbti-container {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  align-items: center;
  width: 100%;
  height: 55vh;
  margin-top: auto; /* 自动分配顶部的剩余空间 */
  margin-bottom: auto; /* 自动分配底部的剩余空间 */
  margin-top: 10vh; 
  /* background-color: aqua; */
}

.mbti-row {
  display: flex;
  justify-content: space-around;
  width: 100%;
  height: 12vh;
  padding: 3px;
}

.mbti-button {
  width: 23%;
  /* 按钮宽度调整为容器宽度的1/4，留出间隔 */
  padding: 0;
  /* 根据需要调整 */
  border: none;
  background-color: transparent;
}

.mbti-button image {
  width: 9vh;
  /* 使图片填满按钮 */
  height: 19vw;
  /* 保持图片的原始宽高比 */
}

.selected-mbti-img {
  border: 3px solid lightblue; /* 以荧光绿色为例 */
  background-color: #D6E6F2;
  border-radius: 20px;
}