.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  height: 100%;
  width: 100%;
}

.header {
  width: 100%;
  height: 15vh;
  /* background-color: aqua; */
  position: relative;
  display: flex;
  object-fit: cover;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  padding-top: 0%;
}
.fail-header {
  width: 100%;
  height: 45vh;
  /* background-color: aqua; */
  position: relative;
  display: flex;
  object-fit: cover;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  padding-top: 0%;
}
.header-word1{
  font-family:fantasy;
  font-size:40px;
  color: rgb(233, 84, 108);
}
.header-word2{
  font-family:fantasy;
  font-size:40px;
  color: rgb(103, 187, 226);
}
.header-word3{
  font-family:fantasy;
  font-size:50px;
  color: rgb(223, 141, 202);
}
.header-word4{
  font-family:fantasy;
  font-size:60px;
  color: rgb(233, 84, 108);
}

.btn{
  height: 15vh;
  width: 40%;
  border-radius: 40px;
  background-color: rgb(241, 207, 226);
  font-size: 24px;
  font-family:fantasy;
  align-content: center;
  color: rgb(153, 54, 153);
  text-align: center;
  line-height:13vh;
}

.quit-btn{
  height: 15vh;
  width: 40%;
  border-radius: 40px;
  background-color: lightblue;
  font-size: 24px;
  font-family:fantasy;
  align-content: center;
  color: green;
  text-align: center;
  line-height:13vh;
}

.user-container{
  background-color:#D6E6F2;
  height: 45vh;
  width: 90%;
  border-radius: 30px;
  position: relative;
  flex-direction: column;
}
.up{
  height: 30%;
  width: 100%;
  /* background-color: black; */
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
}
.user-pic {
  /* 改用 absolute 定位，确保位置固定 */
  /* position: absolute;  */
  margin-top: 5vw;
  margin-left: 5vw;
  /* background-color: black; */
  width: 10vh; /* 设置宽度 */
  height: 10vh; /* 设置高度和宽度相等 */
  border-radius: 50%; /* 圆形 */
  object-fit: cover;
}
.nickname_mbti{
  height: 100%;
  width: 65%;
  display: flex;
  flex-direction: column; /* 垂直布局 */
  justify-content: center; /* 居中对齐 */
  padding-left: 20px; /* 或根据需要进行调整 */
  /* background-color: black */
  align-content: space-between;
}
.nickname{
  
  height: 100%;
  font-size: 40px;
  line-height: 1.5; /* 或根据需要进行调整 */
  font-family:sans-serif;
  text-align: center;
  /* line-height:10vh; */
  padding-top: 1vh;
  color: rgb(122, 54, 111);
}

.mbti{
  height: 100%;
  font-size: 30px;
  line-height: 1.5; /* 或根据需要进行调整 */
  font-family:fantasy;
  text-align: center;
  color: rgb(116, 121, 73);
}

