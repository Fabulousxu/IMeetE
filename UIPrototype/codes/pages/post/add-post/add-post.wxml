<view class="container">
    <!-- 发布t帖子内容 -->
    <view class="bar">
        <!-- 封装一个bar，放置返回按钮 -->
        <view class="back-btn" bindtap="navigateBack">
            <text class="arrow">{{'<'}}</text>
        </view>
    </view>
    <view class="input-title">
        <input class="title" placeholder="请输入标题" bindinput="inputTitleChange"></input>
    </view>
    <view class="input-container">
        <textarea class="input" placeholder="请输入帖子内容" bindinput="inputChange"></textarea>
        <view class="choose-image">
            <view class="image-item" bindtap="chooseImage">选择图片</view>
        </view>
        <view class="choose-type">
            <picker mode="selector" range="{{options}}" bindchange="onPickerChange">
                <view class="picker">{{selectedOption}}</view>
            </picker>
        </view>
        <button class="submit" bindtap="submitPost">发布</button>
    </view>
</view>