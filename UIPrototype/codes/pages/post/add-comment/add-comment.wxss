.container {
    display: flex;
    flex-direction: column;
    width: 100%;
    min-height: 100%;
    padding:2%
  }

.bar {
    width: 100%;
    height: 40px;
}

.back-btn {
    width: 40px;
    height: 40px;
    position: relative;
    top: 20px; /* 调整按钮位置 */
    left: 20px; /* 调整按钮位置 */
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: transparent;
  }
  
.arrow {
    color: black; /* 箭头颜色 */
    font-size: 24px; /* 箭头大小 */
}

.input-container {
    margin-bottom: 20rpx;
  }
  
.input {
    width: 100%;
    height: 200rpx;
    border: 1rpx solid #ccc;
    border-radius: 5rpx;
    padding: 10rpx;
    box-sizing: border-box;
    margin-bottom: 10rpx;
  }
  
.submit {
    width: 100%;
    height: 40rpx;
    background-color: #007bff;
    color: #fff;
    border: none;
    border-radius: 5rpx;
    font-size: 16rpx;
  }