/* pages/register/register.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh; /* 使容器高度占满整个视窗 */
  padding: 20rpx;
}

.form-item {
  margin-bottom: 20rpx;
}

.form-label {
  display: block;
  font-size: 32rpx;
  margin-bottom: 10rpx;
}

.form-input {
  width: 100%;
  padding: 10rpx;
  border: 1px solid #ccc;
  border-radius: 5rpx;
  font-size: 28rpx;
}

.submit-button {
  width: 100%;
  padding: 15rpx;
  background-color: #007aff;
  color: #fff;
  text-align: center;
  border: none;
  border-radius: 5rpx;
  font-size: 32rpx;
  margin-top: 20rpx;
}
.back-button {
  width: 100rpx;
  padding: 10rpx;
  background-color: #ff9800;
  color: #fff;
  text-align: center;
  border: none;
  border-radius: 5rpx;
  font-size: 28rpx;
  margin-top: 20rpx;
}