page{
    display: flex;
    flex-direction: column;
    width: 100%;
    min-height: 100%;
}

swiper{
    height: 100%;
    width: 100%;
}

.main-page {
    display: flex;
    flex-direction: column;
    flex: 1;
    height: 0;
}

.search{
    width: 60%;
    margin-top: 50px;
}

.search_arr{
    border:2px solid black;
    border-radius: 10rpx;
    margin-left: 40rpx;
    width: 500rpx;
}

.search_arr input{
    margin-left: 60rpx;
    height: 40rpx;
    border-radius: 5px;
}

.searchinput{
    padding-left: 36%;
    width:15%;
    text-align: center;
}

.searchicon{
    margin:10rpx 10rpx 10rpx 10rpx;
    position: absolute;
    margin-left: 48%;
    z-index: 2;
    width:15px;
    height: 15px;
    text-align: center;
}

.tabbar {
    height: 7vw;
    width: 100vw;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    border-bottom: 3px #dbdbdb solid;
    top: 0;
    margin-top: 10px;
  }
    
  .tabbar_item {
    display: flex;
    flex: 1;
    flex-direction: column;
    align-items: center;
  }
    
  .on {
    font-weight: 700;
    border-bottom: 2px solid black;
  }
    
    
  .swiper-box {
    display: flex;
    flex-direction: column;
    flex: 1;
    height: 0;
    width: 100%;
    overflow-x: hidden;
    overflow-y: scroll;
  }
    
  .swiper1_top {
    width: 100vw;
    display: flex;
    margin-left: 2vw;
    flex-direction: row;
    font-size: 4vw;
    align-items: center;
  }
    
  .swiper1_top_item {
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 2.5vw 0;
  }
  .swiper1_contain {
    width: 100vw;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  .swiper1_item {
    margin-bottom: 3vw;
    width: 94vw;
  }
  .dir_row {
    display: flex;
    flex-direction: row;
  }

  .subscribe{
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .s-post-list{
    width: 100%;
    margin-top: 16px;
  }

  .s-post{
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 16px;
    background-color: #fff;
    border-radius: 8px;
    box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
    margin-bottom: 16px;
  }

  .s-item{
    display: flex;
    flex-direction: row;
    align-items: center;
    padding: 16px;
    background-color: transparent;
    border-radius: 8px;
    box-shadow: 2px 2px 2px 2px rgba(0, 0, 0, 0.1);
    margin-bottom: 16px;
  }

  .avator{
    width: 64px;
    height: 64px;
    border-radius: 50%;
    margin-right: 16px;
  }

  .info{
    display: flex;
    flex-direction: column;
  }

  .name{
    font-size: 16px;
    font-weight: bold;
    margin-bottom: 8px;
  }

  .mbti{
    font-size: 14px;
    color: #666;
  }

  .data-wrapper{
    display: flex;
    flex-direction: column;
  }

  .fans{
    display:flex;
    flex-direction: row;
  }

  .fans_log{
    margin-right: 20px;
    font-size: 14px;
    color: #666;
    font-weight: 400;
  }

  .post-time{
    padding: 10rpx;
  }

  .sign{
    margin-top: 10px;
    margin-left: 60px;
    font-size: 14px;
    color: black;
    font-weight: 700;
  }

  .user{
    display: flex;
    flex-direction: row;
    align-items: center;
    padding: 16px;
    background-color: #fff;
    border-radius: 8px;
    box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
    margin-bottom: 16px;
  }

  .place{
    margin-left: 80px;
    font-size: 14px;
    color: black;
    font-weight: 700;
  }

  .s-content{
    display: flex;
    flex-direction: row;
    width: 100vw;
    align-items: center;
    box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
    border:1px solid black;
  }

  .content{
    font-size: 14px;
    color: black;
    font-weight: 700;
    width: 60%;
    text-align: center;
  }

  .view-wrapper{
    display: flex;
    flex-direction: column;
    width: 40%;
    border-left: 1px solid #999;
  }

  .view{
    text-align: center;
    display: flex;
    flex-direction: column;
    border-bottom: 1px solid #999;
  }

  .tool-wrapper{
    display: flex;
    flex-direction: row;
  }