.container {
    display: flex;
    flex-direction: column;
    width: 100%;
    min-height: 100%;
    padding:2%
  }

  .post-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 16px;
    background-color: #fff;
    border-radius: 8px;
    box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
    margin-bottom: 16px;
    min-height: 100%;
    overflow: auto;
  }

.bar {
    width: 100%;
    height: 40px;
}

.back-btn {
    width: 40px;
    height: 40px;
    position: relative;
    top: 20px; /* 调整按钮位置 */
    left: 20px; /* 调整按钮位置 */
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: transparent;
  }
  
  .arrow {
    color: black; /* 箭头颜色 */
    font-size: 24px; /* 箭头大小 */
  }
  
  .s-item {
    margin-top: 40px;
    display: flex;
    flex-direction: row;
    align-items: center;
    padding: 16px;
    background-color: transparent;
    border-radius: 8px;
    box-shadow: 2px 2px 2px 2px rgba(0, 0, 0, 0.1);
    margin-bottom: 16px;
  }
  
  .avator {
    width: 64px;
    height: 64px;
    border-radius: 50%;
    margin-right: 16px;
  }
  
  .info {
    display: flex;
    flex-direction: column;
  }
  
  .name {
    font-size: 16px;
    font-weight: bold;
    margin-bottom: 8px;
  }
  
  .mbti {
    font-size: 14px;
    color: #666;
  }
  
  .data-wrapper {
    display: flex;
    flex-direction: column;
  }
  
  .fans {
    display: flex;
    flex-direction: row;
  }
  
  .fans_log {
    margin-right: 20px;
    font-size: 14px;
    color: #666;
    font-weight: 400;
  }
  
  .post-time {
    padding: 10rpx;
  }
  
  .sign {
    margin-top: 10px;
    margin-left: 60px;
    font-size: 14px;
    color: black;
    font-weight: 700;
  }
  
  .place {
    margin-left: 80px;
    font-size: 14px;
    color: black;
    font-weight: 700;
  }

  .content {
    font-size: 14px;
    color: black;
    font-weight: 700;
    width: 100%;
    min-height: 200px;
    text-align: center;
    box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
    border: 1px solid black;
  }
  
  .s-content {
    display: flex;
    flex-direction: row;
    width: 360px;
    align-items: center;
    box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
    border: 1px solid black;
  }
  
  .view-wrapper {
    display: flex;
    flex-direction: column;
    width: 100%;
    border-left: 1px solid #999;
  }
  
  .view {
    text-align: center;
    display: flex;
    flex-direction: column;
    border-bottom: 1px solid #999;
  }
  
  .tool-wrapper {
    display: flex;
    flex-direction: row;
    width: 90%;
  }

  .like {
    justify-content: center;
    width: 30%;
  }

  .comment {
    justify-content: center;
    width: 30%;
  }
  
  .share {
    justify-content: center;
    width: 30%;
  }

  .comment-area {
    width: 90%;
    min-height: 20%;
    padding: 16px;
    border-radius: 8px;
    border: solid 1px #999;
    text-align: center;
  }