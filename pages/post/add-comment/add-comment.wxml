<view class="container">
    <!-- 发布评论内容 -->
    <view class="bar">
        <!-- 封装一个bar，放置返回按钮 -->
        <view class="back-btn" bindtap="navigateBack">
            <text class="arrow">{{'<'}}</text>
        </view>
    </view>
    <view class="input-container" style="position: relative; left: 1rpx; top: 74rpx">
        <textarea class="input" placeholder="请输入评论内容" bindinput="inputChange" style="position: relative; left: 1rpx; top: 0rpx; width: 576rpx; height: 404rpx; display: block; box-sizing: border-box"></textarea>
        <button class="submit" bindtap="submitComment" style="width: 140rpx; height: 64rpx; display: block; box-sizing: border-box; left: 0rpx; top: 0rpx">发布</button>
    </view>
</view>