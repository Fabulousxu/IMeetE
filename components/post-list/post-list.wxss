.container {
  display: flex;
  flex-direction: column;
  width: 100%;
  min-height: 100%;
  padding:2%;
}

.s-post-list {
  padding: auto;
  width: 100%;
  padding-bottom: 100px;
}

.s-post {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 16px;
  /* background-color: #f0faff;  */
  border-radius: 8px;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.6);
  margin-bottom: 16px;
}



.s-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 16px;
  background-color: transparent;
  border-radius: 8px;
  box-shadow: 2px 2px 2px 2px rgba(0, 0, 0, 0.1);
  margin-bottom: 16px;
}

.avator {
  width: 64px;
  height: 64px;
  border-radius: 50%;
  margin-right: 16px;
}

.info {
  display: flex;
  flex-direction: column;
}

.name {
  font-size: 16px;
  font-weight: bold;
  margin-bottom: 8px;
}

.mbti {
  font-size: 14px;
  color: #666;
}

.data-wrapper {
  display: flex;
  flex-direction: column;
}

.fans {
  display: flex;
  flex-direction: row;
}

.fans_log {
  margin-right: 20px;
  font-size: 14px;
  color: #666;
  font-weight: 400;
}

.post-time {
  padding: 10rpx;
}

.sign {
  margin-top: 10px;
  margin-left: 60px;
  font-size: 14px;
  color: black;
  font-weight: 700;
}

.place {
  margin-left: 80px;
  font-size: 14px;
  color: black;
  font-weight: 700;
}

.s-content {
  /* display: flex; */
  /* flex-direction: row; */
  width: 360px;
  height: auto;
  align-items: center;
  /* box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1); */
  border-top: 1px solid black;
}

.content {
  min-height: 64px;
  max-height: 160px;
  font-size: 14px;
  color: black;
  font-weight: 700;
  text-align: left;
  padding-left: 5%;
  padding-right: 5%;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  word-break: break-all;

  border-bottom: 1px solid #999;
}

.view-wrapper {
  display: flex;
  flex-direction: column;
  width: 40%;
  border-left: 1px solid #999;
}

.view {
  text-align: center;
  display: flex;
  flex-direction: column;
  border-bottom: 1px solid #999;
}

.like {
  width: 30%;
  text-align: center;
  background-color: #ffadd2; /* 浅粉红色，用于点赞 */
  color: white;
  padding: 10px;
  border-radius: 20px;
  margin-right: 5px;
}

.comment {
  width: 30%;
  text-align: center;
  background-color: #b5ff91; /* 浅绿色，用于评论 */
  color: white;
  padding: 10px;
  border-radius: 20px;
  margin-right: 5px;
}

.share {
  width: 30%;
  text-align: center;
  background-color: #91caff; /* 浅蓝色，用于分享 */
  color: white;
  padding: 10px;
  border-radius: 20px;
}

.tool-wrapper {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 10px 0;
}

.icon-wrapper {
  margin-top: 1%;
  display: grid;
  /* 5个图标 */
  grid-template-columns: repeat(5, 1fr);
  /* 间距 */
  gap: 24px;
  padding-left: 8%;
  /* border-top: 1px solid #999; */
  /* border-bottom: transparent; */
  
  /* 使图标居中 */
  justify-content: center;
  align-items: center;
  text-align: center;
}

.text-wrapper {
  display: grid;
  /* 5个文字 */
  grid-template-columns: repeat(5, 1fr);
  /* 间距 */
  /* gap: 10px; */
  /* padding-left: 3%; */
  
  /* 使文字居中 */
  text-align: center;
}

.icon {
  width: 20px;
  height: 20px;
  margin-right: 10px;
  place-items: center;
}

.icon_non {
  width: 20px;
  height: 20px;
  margin-right: 10px;
  place-items: center;
}

.icon:active {
  /* 变暗 */
  background-color: #666;
}

.image {
  width: 100%;
  height: 100%;
  border-radius: 8px;
}

.text {
  font-size: 14px;
  color: #666;
  /* font-weight: 400; */
  /* 字体居中 */
  /* text-align: center; */
}